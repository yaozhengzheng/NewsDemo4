<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="20dp"
              android:background="@drawable/bg_slidingmenu_left"
              android:paddingLeft="20dp"
              android:paddingBottom="60dp"
              android:id="@+id/slidingmenu_left"
              tools:context=".ui.activity.FragmentMenu">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/rl_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_item_background"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_news"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView1"
            android:text="新闻"
            android:textColor="#99ffffff"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView1"
           android:layout_toRightOf="@id/imageView1"
            android:text="NEWS"
            android:textColor="#99ffffff"
            android:textSize="10dp"/>



    </RelativeLayout>

    <RelativeLayout

        android:layout_weight="1"
        android:id="@+id/rl_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_read"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2"
            android:text="收藏"
            android:textColor="#99ffffff"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/textView6"
            android:text="FAVORITE"
            android:textColor="#99ffffff"
            android:textSize="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/rl_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_local_news"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/imageView3"
            android:text="本地"
            android:textColor="#99ffffff"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView3"
            android:layout_alignLeft="@id/textView3"
            android:text="LOCAL"
            android:textColor="#99ffffff"
            android:textSize="10dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/rl_commnet"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView4"
            android:src="@drawable/biz_navigation_tab_ties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignBottom="@id/imageView4"
            android:layout_toRightOf="@id/imageView4"
            android:text="COMMENT"
            android:textColor="#99ffffff"
            android:textSize="10dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#99ffffff"
            android:textSize="18dp"
            android:text="跟帖"
            android:layout_alignTop="@id/imageView4"
            android:layout_alignLeft="@id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/biz_navigation_tab_pics"
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="图片"
            android:layout_toRightOf="@id/imageView5"
            android:id="@+id/textView5"
            android:layout_alignTop="@id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#99ffffff"
            android:textSize="18dp" />
        <TextView
            android:layout_alignLeft="@id/textView5"
            android:layout_alignBottom="@id/imageView5"
            android:text="PHOTO"
            android:textColor="#99ffffff"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
